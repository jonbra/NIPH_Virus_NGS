process {
      container = null

      withName:FASTQC {
          container = "${params.use_docker ? 'nfcore/viralrecon:1.1.0' : null}"
      }

      withName:TRIM {
          container = "${params.use_docker ? 'nfcore/viralrecon:1.1.0' : null}"
      }

      withName:INDEX {
          container = "${params.use_docker ? 'nfcore/viralrecon:1.1.0' : null}"
      }

      withName:BOWTIE {
          container = "${params.use_docker ? 'nfcore/viralrecon:1.1.0' : null}"
      }

      withName:CONSENSUS {
          container = "${params.use_docker ? 'nfcore/viralrecon:1.1.0' : null}"
      }
      
      withName:MODIFY_FASTA {
          container = "${params.use_docker ? 'darcyabjones/bbmap:latest' : null}"
      }

      withName:MULTIQC {
          container = "${params.use_docker ? 'nfcore/viralrecon:1.1.0' : null}"
      }
}

docker {
    enabled = params.use_docker
}

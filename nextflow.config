process {
      container = null

      withName:FASTQC {
          container = "${params.use_docker ? 'nfcore/viralrecon:1.1.0' : null}"
      }

      withName:TRIM {
          container = "${params.use_docker ? 'nfcore/viralrecon:1.1.0' : null}"
      }

      withName:DEDUP {
        container = "${params.use_docker ? 'darcyabjones/bbmap:latest' : null}"
      }

      withName:INDEX {
          container = "${params.use_docker ? 'nfcore/viralrecon:1.1.0' : null}"
      }

      withName:BOWTIE {
          container = "${params.use_docker ? 'jonbra/viral_haplo:1.0' : null}"
      }

      withName:MODIFY_BAM {
          container = "${params.use_docker ? 'jonbra/viral_haplo:1.0' : null}"
      }

      withName:TANOTI {
          container = "${params.use_docker ? 'jonbra/samtools_tanoti:1.1' : null}"
      }

      withName:CONSENSUS {
          container = "${params.use_docker ? 'nfcore/viralrecon:1.1.0' : null}"
      }

      withName:MODIFY_FASTA {
          container = "${params.use_docker ? 'darcyabjones/bbmap:latest' : null}"
      }

      withName:MULTIQC {
          container = "${params.use_docker ? 'nfcore/viralrecon:1.1.0' : null}"
      }

      withName:CLIQUE_SNV {
          container = "${params.use_docker ? 'quay.io/biocontainers/cliquesnv:2.0.3--hdfd78af_0' : null}"
      }
}

docker {
    enabled = params.use_docker
}
